# import module
# ðŸ“¦ Import Libraries
import streamlit as st
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
from sklearn.ensemble import RandomForestRegressor
from sklearn.preprocessing import StandardScaler

# ==========================
# ðŸ’¾ Load Dataset
# ==========================
df_all = pd.read_csv("og.dataset.csv")

# ==========================
# ðŸŽ¯ Sidebar Navigation
# ==========================
st.sidebar.title("ðŸŒ«ï¸ CMP7005 PM2.5 Prediction App")
page = st.sidebar.radio("Navigate to âž¤", ["ðŸ“„ Overview", "ðŸ“Š EDA", "ðŸ“ˆ Prediction"])

# ==========================
# ðŸ“„ Page 1: Overview
# ==========================
if page == "ðŸ“„ Overview":
    st.title("ðŸ“„ Dataset Overview")
    st.markdown("This app presents air quality and weather data from Beijing monitoring stations (2013â€“2017).")

    st.subheader("ðŸ§¾ Sample Data")
    st.dataframe(df_all.head(), use_container_width=True)

    st.subheader("ðŸ“ Dataset Dimensions")
    st.markdown(f"âœ… Rows: **{df_all.shape[0]}**, Columns: **{df_all.shape[1]}**")

    st.subheader("â— Missing Values")
    missing = df_all.isnull().sum()
    st.bar_chart(missing[missing > 0])

# ==========================
# ðŸ“Š Page 2: Exploratory Data Analysis
# ==========================
elif page == "ðŸ“Š EDA":
    st.title("ðŸ“Š Exploratory Data Analysis (EDA)")

    st.markdown("Check any of the options below to visualise air quality trends:")

    if st.checkbox("ðŸ“Œ PM2.5 Distribution Histogram"):
        fig, ax = plt.subplots()
        ax.hist(df_all["PM2.5"].dropna(), bins=50, color="salmon", edgecolor='black')
        ax.set_title("PM2.5 Concentration Distribution", fontsize=13)
        ax.set_xlabel("PM2.5 (Âµg/mÂ³)")
        ax.set_ylabel("Frequency")
        st.pyplot(fig)

    if st.checkbox("ðŸ§  Correlation Heatmap"):
        fig, ax = plt.subplots(figsize=(10, 6))
        corr = df_all[['PM2.5', 'PM10', 'SO2', 'NO2', 'CO', 'O3']].corr()
        sns.heatmap(corr, annot=True, cmap="coolwarm", ax=ax, linewidths=0.5)
        ax.set_title("Correlation Between Pollutants", fontsize=13)
        st.pyplot(fig)

    if st.checkbox("ðŸ“… Monthly PM2.5 Trend"):
        fig, ax = plt.subplots(figsize=(10, 4))
        df_all["PM2.5"].resample('M').mean().plot(ax=ax, color="purple")
        ax.set_title("Monthly Average PM2.5 (2013â€“2017)", fontsize=13)
        ax.set_ylabel("PM2.5 (Âµg/mÂ³)")
        st.pyplot(fig)

# ==========================
# ðŸ“ˆ Page 3: PM2.5 Prediction
# ==========================
elif page == "ðŸ“ˆ Prediction":
    st.title("ðŸ“ˆ Predict PM2.5 Level Based on Weather & Pollution Inputs")
    st.markdown("Adjust the sliders below to simulate environmental conditions:")

    # ðŸ”˜ Create input sliders in columns
    col1, col2, col3 = st.columns(3)
    with col1:
        PM10 = st.slider("PM10 (Âµg/mÂ³)", 0.0, 500.0, 100.0)
        SO2 = st.slider("SO2 (Âµg/mÂ³)", 0.0, 100.0, 20.0)
        NO2 = st.slider("NO2 (Âµg/mÂ³)", 0.0, 200.0, 60.0)
    with col2:
        CO = st.slider("CO (mg/mÂ³)", 0.0, 10.0, 1.0)
        O3 = st.slider("O3 (Âµg/mÂ³)", 0.0, 300.0, 80.0)
        TEMP = st.slider("Temperature (Â°C)", -20.0, 50.0, 20.0)
    with col3:
        PRES = st.slider("Pressure (hPa)", 990.0, 1100.0, 1012.0)
        DEWP = st.slider("Dew Point (Â°C)", -30.0, 30.0, 5.0)
        WSPM = st.slider("Wind Speed (m/s)", 0.0, 20.0, 2.5)

    # ðŸŽ¯ Predict button
    if st.button("ðŸš€ Predict PM2.5"):
        input_data = pd.DataFrame([[PM10, SO2, NO2, CO, O3, TEMP, PRES, DEWP, WSPM]],
                                  columns=['PM10', 'SO2', 'NO2', 'CO', 'O3', 'TEMP', 'PRES', 'DEWP', 'WSPM'])

        # ðŸ’¡ Model Training
        X = df_all[['PM10', 'SO2', 'NO2', 'CO', 'O3', 'TEMP', 'PRES', 'DEWP', 'WSPM']]
        y = df_all['PM2.5']

        scaler = StandardScaler()
        X_scaled = scaler.fit_transform(X)
        input_scaled = scaler.transform(input_data)

        model = RandomForestRegressor(n_estimators=100, random_state=42)
        model.fit(X_scaled, y)

        prediction = model.predict(input_scaled)

        # âœ… Show result
        st.success(f"âœ… Predicted PM2.5 Level: **{prediction[0]:.2f} Âµg/mÂ³**")
